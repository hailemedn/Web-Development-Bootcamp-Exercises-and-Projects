<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle" id="postTitle-label">Title</label>
    <input
      type="text"
      id="postTitle"
      name="postTitle"
      aria-labelledby="postTitle-label"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label for="postBody" id="postBody-label">post</label>
    <textarea
      name="postBody"
      id="postBody"
      aria-labelledby="postBody-label"
      cols="30"
      rows="10"
      class="form-control"
    ></textarea>
  </div>

  <button class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
